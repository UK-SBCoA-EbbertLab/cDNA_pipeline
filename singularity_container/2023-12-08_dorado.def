Bootstrap: docker
From: ubuntu:22.04

%post

        ## Make Shell Noninteractive ##
        DEBIAN_FRONTEND=noninteractive

        ## Install basic packages and get update
        apt-get update && apt-get install -y --no-install-recommends \
		locales \
		libarchive-dev \
		sudo \
		wget \
		curl \
        	git \
        	ca-certificates \
        	build-essential \
        	nvidia-cuda-toolkit \
        	libhdf5-dev \
        	libssl-dev \
        	libzstd-dev \
        	cmake \
        	autoconf \
        	automake \
		python3 \
		pip

	## Install pod5 converter ##
	pip install pod5

        ## Set timezone and language for container ##
        ln -fs /usr/share/zoneinfo/America/New_York /etc/localtime

        export LANGUAGE=en_US.UTF-8
        export LANG=en_US.UTF-8
        export LC_ALL=en_US.UTF-8
        sudo locale-gen en_US.UTF-8

        echo 'export LANGUAGE="en_US.UTF8"' >> $SINGULARITY_ENVIRONMENT
        echo 'export LANG="en_US.UTF8"' >> $SINGULARITY_ENVIRONMENT
        echo 'export LC_ALL="en_US.UTF8"' >> $SINGULARITY_ENVIRONMENT

	## Install Dorado ##
	cd /
	mkdir installations
	cd /installations/
	wget https://cdn.oxfordnanoportal.com/software/analysis/dorado-0.5.0-linux-x64.tar.gz
	tar -xzvf dorado-0.5.0-linux-x64.tar.gz
	echo 'export PATH="/installations/dorado-0.5.0-linux-x64/bin/:$PATH"' >> $SINGULARITY_ENVIRONMENT	

%test
		
	## Check if installations are on path and/or display their versions ##
	dorado --version # Dorado
	pod5 --version # Pod5 converter	
	
%labels
	author Bernardo Aguzzoli Heberle
